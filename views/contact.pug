extends base.pug

block scripts 
  script(src='/static/index.js')

block style 
    style 
      include ../static/style.css
      include ../static/styleContact.css

block content
    div.container
       h1 Contact Us
       form(action="/contact",method ="post",class="myForm")
         input(type="text",class="myInput",name="name",placeholder="Enter your name")
         input(type="phone",class="myInput",name="phone",placeholder="Enter your phone phone no")
         input(type="email",class="myInput",name="email",placeholder="Enter your email id")
         textarea(type="address",class="myInput",name="address",cols="20" rows="5" placeholder="Enter your address")
         textarea(type="text",class="myInput",name="desc",cols="20" rows="5" placeholder="Enter your concern")
         button(class="btn")
           | Submit